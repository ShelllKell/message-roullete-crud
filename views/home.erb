<!--Home Message Form-->

<form method="post" action="/messages">
  <label for="message">Message:</label>
  <textarea type="text" col="40" row="5" id="message" name="message"></textarea><br>
  <button>Submit</button>
</form>


<% messages.each do |message_hash| %>
  <li><%= message_hash["message"] %></li>
  <a href="/messages/<%= message_hash["id"] %>/edit">Edit</a>
  <a href="/messages/<%= message_hash["id"] %>/comment">Comment</a>



  <form method="post" action="/messages/<%= message_hash["id"] %>">
    <input type="hidden" name="_method" value="delete"/>
    <input type="submit" value="Delete Message"/>

  </form>

<% end %>

